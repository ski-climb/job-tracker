<div class="list-group">
  <div class="list-group-item">
    <h4 class="list-group-item-heading">Title</h4>
    <p class="list-group-item-text"><%= @job.title %></p>
  </div>
  <div class="list-group-item">
    <h4 class="list-group-item-heading">Category</h4>
    <p class="list-group-item-text"><%= link_to @job.category_title, category_path(@job.category) %></p>
  </div>
  <div class="list-group-item">
    <h4 class="list-group-item-heading">Company</h4>
    <p class="list-group-item-text"><%= link_to @job.company_name, company_path(@job.company) %></p>
  </div>
  <div class="list-group-item">
    <h4 class="list-group-item-heading">Description</h4>
    <p class="list-group-item-text"><%= @job.description %></p>
  </div>
  <div class="list-group-item">
    <h4 class="list-group-item-heading">Level of Interest</h4>
    <p class="list-group-item-text"><%= @job.level_of_interest %></p>
  </div>
  <div class="list-group-item">
    <h4 class="list-group-item-heading">City</h4>
    <p class="list-group-item-text"><%= @job.city %></p>
  </div>
</div>

<%= render partial: 'comments/form' %>

<% if @job.comments.any? %>
  <h3><strong>Comments</strong></h3>
  <div class="list=group">
    <%= render partial: 'jobs/comment', collection: @job.comments.reverse %>
  </div>
<% end %>
