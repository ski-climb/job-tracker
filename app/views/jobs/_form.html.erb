<%= link_to 'Add new category', new_category_path, class: "btn btn-default" %>
<hr />

<%= bootstrap_form_for [@company, @job] do |f| %>

  <%= f.collection_select :category_id, Category.order(:title), :id, :title, hide_label: true %>
  <%= f.text_field :title, hide_label: true, placeholder: "Title" %>
  <%= f.text_field :description, hide_label: true, placeholder: "Description" %>
  <%= f.number_field :level_of_interest, hide_label: true, placeholder: "Level of interest" %>
  <%= f.text_field :city, hide_label: true, placeholder: "City" %>

  <%= f.submit %>
<% end %>
